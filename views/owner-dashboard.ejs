<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Dashboard - Scratch</title>
    <link rel="stylesheet" href="/css/owner-dashboard.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-content">
            <a href="/owner/dashboard" class="nav-brand">SCRATCH - OWNER</a>
            <div class="nav-links">
                <span class="nav-link" style="background: rgb(248, 248, 248); color: rgb(0, 0, 0);">
                    Welcome, <%= user.fullname %>
                </span>
                <a href="/owner/logout" class="nav-link">Logout</a>
            </div>
        </div>
    </nav>

    <% if (success) { %>
        <div class="flash success"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="flash error"><%= error %></div>
    <% } %>

    <div class="container">
        <div class="dashboard-header">
            <h1 class="title">Owner Dashboard</h1>
            <p class="text">Manage your products and business</p>
        </div>

        <div class="dashboard">
            <div class="add-product-form">
                <h3 class="form-title">Add New Product</h3>
                <form action="/owner/products" method="POST" enctype="multipart/form-data">
                    <div class="form">
                        <label class="label">Product Name</label>
                        <input type="text" name="name" class="input" required>
                    </div>
                    
                    <div class="form">
                        <label class="label">Price (₹)</label>
                        <input type="number" name="price" class="input" min="1" required>
                    </div>
                    
                    <div class="form">
                        <label class="label">Discount (%)</label>
                        <input type="number" name="discount" class="input" min="0" max="100" value="0">
                    </div>
                    
                    <div class="form">
                        <label class="label">Description</label>
                        <textarea name="description" class="input" rows="3" required></textarea>
                    </div>
                    
                    <div class="form">
                        <label class="label">Product Image</label>
                        <input type="file" name="image" class="input" accept="image/*">
                    </div>
                    
                    <button type="submit" class="button">Add Product</button>
                </form>
            </div>

            <div style="background: rgb(248, 248, 248); padding: 30px; border-radius: 8px; border: 1px solid rgb(224, 224, 224);">
                <h3 class="form-title">Business Information</h3>
                <div style="display: flex; flex-direction: column; gap: 12px;">
                    <div>
                        <strong>Owner Name:</strong> <%= user.fullname %>
                    </div>
                    <div>
                        <strong>Email:</strong> <%= user.email %>
                    </div>
                    <div>
                        <strong>GSTIN:</strong> <%= user.gstin %>
                    </div>
                    <div>
                        <strong>Total Products:</strong> <%= products.length %>
                    </div>
                </div>
            </div>
        </div>

        <div class="products-section">
            <h2 class="section-title">Your Products</h2>
            
            <% if (products.length > 0) { %>
                <div class="products-grid">
                    <% products.forEach(product => { %>
                        <div class="product-card">
                            <img src="<%= product.image || '/images/default-product.jpg' %>" 
                                 alt="<%= product.name %>" 
                                 class="product-image"
                                 onerror="this.src='/images/default-product.jpg'">
                            <div class="product-content">
                                <h3 class="product-title"><%= product.name %></h3>
                                <p class="product-description"><%= product.description %></p>
                                <div class="product-price">
                                    <span class="current-price">
                                        ₹<%= (product.price * (1 - product.discount/100)).toFixed(0) %>
                                    </span>
                                    <% if (product.discount > 0) { %>
                                        <span class="original-price">₹<%= product.price %></span>
                                        <span class="discount"><%= product.discount %>% OFF</span>
                                    <% } %>
                                </div>
                                <div class="product-actions">
                                    <form action="/owner/products/<%= product._id %>/delete" method="POST">
                                        <button type="submit" class="btn btn-danger" 
                                                onclick="return confirm('Are you sure you want to delete this product?')">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <h3 class="empty-title">No Products Yet</h3>
                    <p class="empty-text">Add your first product using the form above</p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/owner-dashboard.js"></script>
</body>
</html>